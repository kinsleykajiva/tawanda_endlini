<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/phone_number"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SmSLoginActivity"
    tools:showIn="@layout/activity_sm_slogin">

    <TextView
        android:id="@+id/phone_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Headline"/>

    <LinearLayout
        android:id="@+id/phone_number_phone_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/phone_number_label"
            android:labelFor="@+id/phone_number_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="phone_label" />

        <EditText
            android:id="@+id/phone_number_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"

            android:inputType="phone"
            android:editable="false"
            android:ems="10"
            style="@style/Widget.AppCompat.EditText" />

    </LinearLayout>

    <Button
        android:id="@+id/phone_number_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"

        android:text="submit_sign_up"
        style="@style/Widget.AppCompat.Button.Colored" />

</LinearLayout>